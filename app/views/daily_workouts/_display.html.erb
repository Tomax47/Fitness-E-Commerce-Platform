<div class="py-12 bg-white" id="daily-workout-container">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="lg-text-center">
      <h1 class="mb-3 text-base text-indigo-600 font-semibold tracking-wide uppercase sm:flex sm:justify-center">
        Today's Workout
      </h1>
      <p class="mt-2 text-3xl leading-8 font-extrabold tracking-tight text-gray-900 sm:text-4xl sm:flex sm:justify-center">
        <%= @daily_workout.focus %>
      </p>
    </div>
    <br />
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
      <tr>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Lift
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Sets
      </th>
      <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
        Reps
      </th>
      </tr>
      </thead>

      <tbody class="bg-white divide-y divide-gray-200">
      <% @daily_workout.lifts.each do |lift| %>
        <tr>
          <td class="px-6 py-4 whitespace-nowrap">
            <div>
              <h2 class="text-base text-indigo-600 font-medium tracking-wide">
                <%= lift.name %>
              </h2>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div>
              <h2 class="text-base text-indigo-600 font-medium tracking-wide">
                <%= lift.sets %>
              </h2>
            </div>
          </td>
          <td class="px-6 py-4 whitespace-nowrap">
            <div>
              <h2 class="text-base text-indigo-600 font-medium tracking-wide">
                <%= lift.reps %>
              </h2>
            </div>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>